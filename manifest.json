{
  "manifest_version": 3,
  "name": "Emissary",
  "description": "Web Clipper allows you to send messages to your N8N instance or Discord or any othere APP via predefined WebHook profiles.",
  "options_ui": {
    "page": "src/pages/options/index.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon_32x32.png"
    }
  },
  "icons": {
    "128": "icon_128x128.png"
  },
  "permissions": ["activeTab", "storage"],
  "web_accessible_resources": [
    {
      "resources": ["contentStyle.css", "icon_128x128.png", "icon_32x32.png"],
      "matches": []
    }
  ]
}
